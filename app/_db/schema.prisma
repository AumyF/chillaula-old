generator kysely {
  provider = "prisma-kysely"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Resu {
  id        Int             @id @default(autoincrement())
  content   String
  createdAt DateTime        @default(now())
  scraps    ScrapsOnResus[]
}

model ScrapsOnResus {
  resuId  Int
  resu    Resu  @relation(fields: [resuId], references: [id])
  scrapId Int
  scrap   Scrap @relation(fields: [scrapId], references: [id])

  @@id([scrapId, resuId])
  @@index([resuId])
  @@index([scrapId])
}

model Scrap {
  id        Int             @id @default(autoincrement())
  title     String
  createdAt DateTime        @default(now())
  resus     ScrapsOnResus[]
}

model Reference {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  url       String
}

model Tag {
  id       Int    @id @default(autoincrement())
  name     String
  parentId Int?
  parent   Tag?   @relation("tag", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Tag      Tag[] @relation("tag")

  @@unique([parentId, name])
}
